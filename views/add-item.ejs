  <body>
    <div class="container">
      <div class="header">
        <h1 data-translate="add-new-jewelry">‚ûï Add New Jewelry Item</h1>
        <p data-translate="add-item-subtitle">
          Add a new item to your inventory
        </p>
      </div>

      <div class="nav-links">
        <a href="/" data-translate="back-dashboard">üè† Back to Dashboard</a>
      </div>

      <div class="form-container">
        <form action="/add-item" method="POST">
          <div class="form-group">
            <label for="name" data-translate="item-name">Item Name *</label>
            <input
              type="text"
              id="name"
              name="name"
              data-translate-placeholder="item-name-placeholder"
              placeholder="e.g., Gold Ring, Necklace, Bracelet"
              required
            />
          </div>

          <div class="form-group">
            <label for="type" data-translate="jewelry-type"
              >Jewelry Type *</label
            >
            <select id="type" name="type" required>
              <option value="" data-translate="select-jewelry-type">
                Select jewelry type...
              </option>
              <option value="Ring" data-translate="ring">Ring</option>
              <option value="Necklace" data-translate="necklace">
                Necklace
              </option>
              <option value="Bracelet" data-translate="bracelet">
                Bracelet
              </option>
              <option value="Earrings" data-translate="earrings">
                Earrings
              </option>
              <option value="Pendant" data-translate="pendant">Pendant</option>
              <option value="Chain" data-translate="chain">Chain</option>
              <option value="Watch" data-translate="watch">Watch</option>
              <option value="Other" data-translate="other">Other</option>
            </select>
          </div>

          <div class="form-group">
            <label for="weight" data-translate="weight-grams"
              >Weight (grams) *</label
            >
            <input
              type="number"
              id="weight"
              name="weight"
              step="0.01"
              min="0.01"
              data-translate-placeholder="weight-placeholder"
              placeholder="0.00"
              required
            />
          </div>

          <div class="form-group">
            <label for="purity" data-translate="gold-purity"
              >Gold Purity (%) *</label
            >
            <select id="purity" name="purity" required>
              <option value="" data-translate="select-purity">
                Select purity...
              </option>
              <option value="37.5">9K (37.5%)</option>
              <option value="41.7">10K (41.7%)</option>
              <option value="58.3">14K (58.3%)</option>
              <option value="75">18K (75%)</option>
              <option value="91.7">22K (91.7%)</option>
              <option value="99.9">24K (99.9%)</option>
            </select>
          </div>

          <div class="form-group">
            <label for="cost" data-translate="purchase-cost"
              >Purchase/Cost Price ($) *</label
            >
            <input
              type="number"
              id="cost"
              name="cost"
              step="0.01"
              min="0"
              data-translate-placeholder="cost-placeholder"
              placeholder="0.00"
              required
            />
          </div>

          <div class="form-group">
            <label for="description" data-translate="description"
              >Description (optional)</label
            >
            <textarea
              id="description"
              name="description"
              data-translate-placeholder="description-placeholder"
              placeholder="Additional details about the item..."
            ></textarea>
          </div>

          <div class="action-buttons">
            <button
              type="submit"
              class="btn primary"
              data-translate="save-item"
            >
              üíæ Save Item
            </button>
            <a href="/" class="btn" data-translate="cancel">‚ùå Cancel</a>
          </div>
        </form>
      </div>
    </div>

    <script src="/js/language.js"></script>
